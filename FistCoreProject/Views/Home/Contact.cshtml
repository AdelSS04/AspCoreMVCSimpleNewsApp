@model ContactUs
<div class="container" style="margin-top:30px;margin-bottom:30px;" >
	<div class="col-8">
		<form asp-action="SendContact">
			<div class="form-row">
				<div class="col form-group">
					<input type="text" asp-for="Name" class="form-control" placeholder="Your Name" >
					<span asp-validation-for="Name"class="text-danger"></span>
				</div>
				<div class="col form-group">
					<input type="email" class="form-control" asp-for="Email"  placeholder="Your Email" >
				</div>
			</div>
			<div class="form-group">
				<input type="text" class="form-control" asp-for="Subject"  placeholder="Subject">
			</div>
			<div class="form-group">
				<textarea class="form-control" asp-for="Message" rows="5"  placeholder="Your Message" ></textarea>
				<span class="text-danger" asp-validation-for="Message"></span>
			</div>
		
			<div class="text-center"><button class="btn btn-success" type="submit">Send Message</button></div>
		</form>
	</div>
</div>